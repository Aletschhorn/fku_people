<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Mode</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="1" type="array">
										<numIndex index="0">Search form</numIndex>
										<numIndex index="1">Person->list</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Birthday list</numIndex>
										<numIndex index="1">Person->birthday</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Current user data</numIndex>
										<numIndex index="1">Person->show</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">Dashbaord box</numIndex>
										<numIndex index="1">Person->dashboard</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">Notification</numIndex>
										<numIndex index="1">Person->notification;Person->updateNotificationSetup;Person->updateNotification;Person->addNotification;Person->removeNotification;Person->notificationInfo</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="0">Notification info</numIndex>
										<numIndex index="1">Person->notificationInfo</numIndex>
									</numIndex>
									<numIndex index="8" type="array">
										<numIndex index="0">Password generator</numIndex>
										<numIndex index="1">Person->generatePassword</numIndex>
									</numIndex>
									<numIndex index="9" type="array">
										<numIndex index="0">Team member list</numIndex>
										<numIndex index="1">Person->team</numIndex>
									</numIndex>
									<numIndex index="10" type="array">
										<numIndex index="0">FKU aktuell birthdays</numIndex>
										<numIndex index="1">Person->seniorBirthday</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.teams>
						<TCEforms>
							<label>Subteam IDs (comma-separated)</label>
							<displayCond>FIELD:switchableControllerActions:=:Person->team</displayCond>
							<config>
								<type>input</type>
								<size>5</size>
							</config>
						</TCEforms>
					</settings.teams>
					<settings.display>
						<TCEforms>
							<label>Displayed information</label>
							<displayCond>FIELD:switchableControllerActions:=:Person->team</displayCond>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Name</numIndex>
										<numIndex index="1">name</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Address</numIndex>
										<numIndex index="1">address</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Phone</numIndex>
										<numIndex index="1">phone</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">E-mail</numIndex>
										<numIndex index="1">mail</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">Birthday</numIndex>
										<numIndex index="1">birthday</numIndex>
									</numIndex>
								</items>
								<maxitems>5</maxitems>
								<size>5</size>
							</config>
						</TCEforms>
					</settings.display>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>